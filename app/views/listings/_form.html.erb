  </div>
  </div>

  <div class="row">
  <div class="form-group col-md-4">
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </div>
  </div>

  <div class="row">
  <div class="form-group col-md-4">
    <%= form.label :measurements %><br>
